{% trans_default_domain 'FOSUserBundle' %}
<div>
    <h2>{{ 'reset_password.request.title'|trans }}</h2>
    <p>{{ 'reset_password.request.text'|trans }}</p>
</div>
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request mt-40" novalidate>

    <div class="form-group form-material floating mb-40" data-plugin="formMaterial">
        <input type="email" class="form-control" id="inputEmail" name="username"/>
        <label class="floating-label" for="inputEmail">{{ 'reset_password.request.form.email_placeholder'|trans }}</label>
        <span class="error-message text-left left-0">
            {% for type, flashMessages in app.session.flashbag.all() %}
                {% if type == 'error_reset' %}
                    {% for flashMessage in flashMessages %}
                       {{ flashMessage }}
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn basic-btn btn-lg btn-block">{{ 'reset_password.request.form.submit'|trans }}</button>
    </div>
</form>
<div class="pull-right"><a  href="{{ path('fos_user_security_login') }}">{{ 'reset_password.request.back_to_login'|trans }} ?</a></div>

